<h1>Lista adresów osób kont.</h1>

<table class="table table-bordered table-striped table-hover">
  <thead>
    <tr>
      <th>Id osoba kont</th>
      <th>Typ</th>
      <th>Kraj</th>
      <th>Kod pocztowy</th>
      <th>Miasto</th>
      <th>Ulica</th>
      <th>Nr budynku</th>
      <th>Nr lokalu</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @adres_osoba.each do |adres_osoba| %>
      <tr>
        <td><%= adres_osoba.osoba_kont.imie_and_nazwisko %></td>
        <td><%= adres_osoba.typ_adresu.typ %></td>
        <td><%= adres_osoba.kraj %></td>
        <td><%= adres_osoba.kod_pocztowy %></td>
        <td><%= adres_osoba.miasto %></td>
        <td><%= adres_osoba.ulica %></td>
        <td><%= adres_osoba.nr_budynku %></td>
        <td><%= adres_osoba.nr_lokalu %></td>
        <td><%= link_to 'Pokaż', adres_osoba,  class: "btn btn-link" %></td>
        <td><%= link_to 'Edycja', edit_adres_osoba_path(adres_osoba),  class: "btn btn-link" %></td>
        <td><%= link_to 'Skasuj', adres_osoba,  class: "btn btn-link", method: :delete, data: { confirm: 'Jesteś pewny?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

