<div class="row">
    <div class="col-md-2">
        <div class="navbar-brand">
            <%= link_to image_tag('logo.png', width: '100', height: '75', alt: 'Logo'), '/', title: 'Logo', relative: true, class: "btn btn-link " %>
        </div>
    </div>
</div>
<div class="col-md-10">
    <div class="row">
        <div class="col-md-10 pull-right">
            <div class="pull-right">
            <% if user_signed_in? %>
            <%# logowanie i wylogowywanie %>
            <nav class="navbar navbar-light bg-light">
                <div class="nav navbar-nav">
                    <ul class="nav navbar-nav">
                        <span class="glyphicon glyphicon-log-in">  </span>
                        <%= link_to('Logout', destroy_user_session_path, method: :delete) %>
                    </ul>
                </div>
            </nav>
            <% else %>
            <nav class="navbar navbar-light bg-light">
                <div class="nav navbar-nav">
                    <ul class="nav navbar-nav">
                        <span class="glyphicon glyphicon-user">  </span>
                        <%= link_to 'Login', new_user_session_path %>
                    </ul>
                </div>
            </nav>
            <% end %>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-10">
            <div class="container">
            <%# Czy użytkownik jest zalogowany %>
            <% if user_signed_in? %>
            <%# czy uzytkownikiem jest administrator %>
            <% if current_user.id  == 1 %>
                <nav class="navbar navbar-light bg-light">
                    <div class="navbar-collapse collapse">
                        <ul class="nav navbar-nav">             
                            <li>
                                <%= link_to('Edycja użytkowników', opiekun_index_path) %>
                            </li>
                            <li class="dropdown">
                                <a data-toggle="dropdown" class="dropdown-toggle" href="#">Import<span class="caret"></span></a>
                                <ul class="dropdown-menu">
                                    <li>
                                        <%= link_to('Import kontrahentów', load_kontrahenci_upload_path) %>
                                    </li>
                                    <li>
                                        <%= link_to('Import obrotów', load_obroty_upload_path) %>
                                    </li>
                                    <li>
                                        <%= link_to('Import faktur', load_faktury_upload_path) %>
                                    </li>
                                </ul>
                            </li>
                        </ul>
                    </div>
                </nav>
                <%# czy uzytkownikiem jest kierownik %>
                <% elsif current_user.id  == 2 %>
                <nav class="navbar navbar-light bg-light">
                    <div class="navbar-collapse collapse">
                        <ul class="nav navbar-nav">         
                            <li><%= link_to('Edycja Kontrahentów', kontrahenci_index_path) %></li>
                            <li><%= link_to('Dodanie zlecenia', zlecenie_index_path) %></li>
                            <li><%= link_to('Dostawy marketingowe', dost_marketingowe_index_path) %></li>
                            <li><%= link_to('Odmowa', odmowa_mark_index_path) %></li>
                        </ul>
                    </div>
                </nav>
                <%# jezeli inny uzytkownik  %>
                <% else %>
                <nav class="navbar navbar-light bg-light">
                    <div class="navbar-collapse collapse">
                        <ul class="nav navbar-nav">         
                            <li><%= link_to('Edycja Kontrahentów', kontrahenci_index_path) %></li>
                            <li><%= link_to('Dostawy marketingowe', dost_marketingowe_index_path) %></li>
                            <li><%= link_to('Odmowa', odmowa_mark_index_path) %></li>
                        </ul>
                    </div>
                </nav>
                <% end %>
                <% end %>
            </div>
        </div>
    </div>
</div>
