<h1>Lista faktur</h1>

<table>
  <thead>
    <tr>
      <th>Id kontrahenci</th>
      <th>Nr faktury</th>
      <th>Kwota</th>
      <th>Vat</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @faktury.each do |faktury| %>
      <tr>
        <td><%= faktury.kontrahenci_id %></td>
        <td><%= faktury.nr_faktury %></td>
        <td><%= faktury.kwota %></td>
        <td><%= faktury.vat %></td>
        <td><%= link_to 'Pokaż', faktury %></td>
        <td><%= link_to 'Edycja', edit_faktury_path(faktury) %></td>
        <td><%= link_to 'Skasuj', faktury, method: :delete, data: { confirm: 'Jesteś pewny?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nowa faktura', new_faktury_path %>
