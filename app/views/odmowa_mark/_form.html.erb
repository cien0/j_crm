<%= form_for(@odmowa_mark) do |f| %>
  <% if @odmowa_mark.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@odmowa_mark.errors.count, 'błędów') %> uniemożliwia zapisanie tego kontrahenta:</h2>

      <ul>
      <% @odmowa_mark.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :kontrahenci_id %><br>
    <%= f.select :kontrahenci_id, Kontrahenci.all.order(:nazwa).map { |p| [p.nazwa, p.id] }, {:prompt => ""}, { :class => "chosen-select" } %>
  </div>
  <div class="field">
    <%= f.label :odmowa_typ_id %><br>
    <%= f.select :odmowa_typ_id, options_from_collection_for_select( OdmowaTyp.all, 'id', 'typ', @odmowa_mark.odmowa_typ_id), :prompt => "" %>
  </div>
  <div class="field">
    <%= f.label :data %><br>
    <%= f.date_select :data %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
