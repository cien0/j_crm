<h1>Lista numerów osób kontaktowych</h1>

<table>
  <thead>
    <tr>
      <th>Id osoba kont</th>
      <th>Kontakt</th>
      <th>Typ</th>
      <th>Opis</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @numer_osoba.each do |numer_osoba| %>
      <tr>
        <td><%= numer_osoba.osoba_kont_id %></td>
        <td><%= numer_osoba.kontakt %></td>
        <td><%= numer_osoba.typ %></td>
        <td><%= numer_osoba.Opis %></td>
        <td><%= link_to 'Pokaż', numer_osoba %></td>
        <td><%= link_to 'Edycja', edit_numer_osoba_path(numer_osoba) %></td>
        <td><%= link_to 'Skasuj', numer_osoba, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nowy numer osoby kontaktowej', new_numer_osoba_path %>
