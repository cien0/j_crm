<h1>Lista kontrahentów</h1>
</br>
<div class="digg_pagination">
<%= will_paginate @kontrahenci %>
</div>
</br>
<table class="table table-bordered table-striped table-hover">
    <thead>
    <tr>
      <th>Id</th>
      <th>Nazwa</th>
      <th>Nip</th>
      <th>Id opiekun</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @kontrahenci.each do |kontrahenci| %>
      <tr>
        <td><%= kontrahenci.system_id %></td>
        <td><%= kontrahenci.nazwa %></td>
        <td><%= kontrahenci.nip %></td>
        <td><%= kontrahenci.opiekun.login %></td>
        
    <% if kontrahenci.status_text_id==0  %>
    <td bgcolor="#e6e6ff"> <%= kontrahenci.status_text.status_text %></td>
    <% elsif kontrahenci.status_text_id==1  %>
    <td bgcolor="#cceeff"> <%= kontrahenci.status_text.status_text %></td>
    <% elsif kontrahenci.status_text_id==2  %>
    <td bgcolor="#66ccff"> <%= kontrahenci.status_text.status_text %></td>
    <% elsif kontrahenci.status_text_id==3  %>
    <td bgcolor="#ff3300"> <%= kontrahenci.status_text.status_text %></td>
    <% elsif kontrahenci.status_text_id==4  %>
    <td bgcolor="#944dff"> <%= kontrahenci.status_text.status_text %></td>
    <% elsif kontrahenci.status_text_id==5  %>
    <td bgcolor="#80bfff"> <%= kontrahenci.status_text.status_text %></td>
    <% elsif kontrahenci.status_text_id==10  %>
    <td bgcolor="#66ff66"> <%= kontrahenci.status_text.status_text %></td>
    <% end %>
        
        
        <td><%= link_to 'Pokaż', kontrahenci_lista_url(kontrahenci),  class: "btn btn-link" %></td>
        <td><%= link_to 'Edytuj', edit_kontrahenci_path(kontrahenci),  class: "btn btn-link" %></td>
        <td><%= link_to 'Kasuj', kontrahenci, method: :delete,  class: "btn btn-link",  data: { confirm: 'Czy jesteś pewny??'} %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nowu kontrahent', new_kontrahenci_path %>
</br>
